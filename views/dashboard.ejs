                    <h5><%= category %></h5>
                    <% posts[category].forEach(post => { %>
                        <li class="post-container">
                            <div class="post-image-container">
                                <% if (post.image && post.image.data) { %>
                                    <img src="data:<%= post.image.contentType %>;base64,<%= post.image.data.toString('base64') %>" alt="Post Image" class="post-image">
                                <% } %>
                            </div>
                            <hr>
                            <div class="post-content">
                                <div class="post-header">
                                    <strong><%= post.userId.username %> <i class="fas fa-check-circle"></i></strong> <!-- Verified symbol -->
                                    <h3><a href="/post/<%= post._id %>"><%= post.title %></a></h3>
                                </div>
                                <div class="post-meta">
                                    <strong>Category:</strong> <%= post.category %>
                                    <br>
                                    <small><%= timeAgo(post.timestamp) %></small>
                                </div>
                                <p class="post-description"><%= post.description %></p>
                                <button class="btn btn-secondary share-button" onclick="sharePost('<%= post._id %>', '<%= post.title %>', '<%= post.link %>')">
                                    <i class="fas fa-share"></i> Share
                                </button>
                            </div>
                        </li>
                        
                        
                        
                        
                        
                        
                        
                    <% }); %>
                    
                <% } %>
